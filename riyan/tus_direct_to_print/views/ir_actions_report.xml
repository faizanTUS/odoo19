<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="act_report_xml_view_inherited" model="ir.ui.view">
            <field name="name">ir.actions.report.form.inherit</field>
            <field name="model">ir.actions.report</field>
            <field name="inherit_id" ref="base.act_report_xml_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='print_report_name']" position="after">
                    <field name="default_print_option" invisible="report_type != 'qweb-pdf'"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>