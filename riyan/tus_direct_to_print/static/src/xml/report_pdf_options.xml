<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="tus_direct_to_print.ButtonOptions" owl="1">
        <Dialog size="'md'" footer="false">
            <div class="m-5" style="text-align:center;">
                <button class="btn btn-success btn-lg" t-on-click="()=>props.onSelectOption('print')" style="margin-right: 5px;">
                        <i class="fa fa-print"/>
                    <span style="padding-left: 5px;">Print Now</span>
                </button>
                <button class="btn btn-primary btn-lg" t-on-click="()=>props.onSelectOption('download')" style="margin-right: 5px;">
                        <i class="fa fa-download"/>
                    <span style="padding-left: 5px;">Download Only</span>
                </button>
                <button class="btn btn-warning btn-lg" t-on-click="()=>props.onSelectOption('open')" style="margin-right: 5px;">
                        <i class="fa fa-file-text mr-2"/>
                    <span style="padding-left: 5px;">View PDF</span>
                </button>
                <button class="btn btn-secondary btn-lg" t-on-click="()=>props.onSelectOption('close')">Close</button>
            </div>

        </Dialog>
    </t>
</templates>