<odoo>
    <record id="group_product_create" model="res.groups">
        <field name="name">Product Create Access</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_partner_create" model="res.groups">
        <field name="name">Partner Create Access</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Restrict Product Creation -->
    <record id="product_create_rule" model="ir.rule">
        <field name="name">Restrict Product Creation</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="groups" eval="[(4, ref('restrict_create_product_customer.group_product_create'))]"/>
        <field name="perm_create" eval="False"/>
<!--        <field name="perm_write" eval="False"/>-->
    </record>

    <!-- Restrict Partner Creation -->
    <record id="partner_create_rule" model="ir.rule">
        <field name="name">Restrict Partner Creation</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="groups" eval="[(4, ref('restrict_create_product_customer.group_partner_create'))]"/>
        <field name="perm_create" eval="False"/>
<!--        <field name="perm_write" eval="False"/>-->
    </record>
</odoo>
