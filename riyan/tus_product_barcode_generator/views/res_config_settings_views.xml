<odoo>
    <record id="res_config_settings_view_barcode" model="ir.ui.view">
        <field name="name">res.config.settings.barcode</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//form" position="inside">
                  <app data-string="Barcode Generator" string="Barcode Generator Configuration"
                       name="barcode_generator" logo="/tus_product_barcode_generator/static/description/qr.png" groups="tus_product_barcode_generator.product_product_barcode_generator_group_user">
                      <block title="Barcode" name="barcode_generator">
                            <setting id="auto_generate_barcode_setti">
                                <field name="auto_generate_barcode"/>
                            </setting>
                           <setting id="barcode_type_setti">
                                <field name="barcode_type"/>
                            </setting>
                      </block>
                  </app>
            </xpath>
        </field>
    </record>
</odoo>
