<odoo>
    <record id="view_partner_form_inherit_last_orders" model="ir.ui.view">
        <field name="name">res.partner.form.last.orders</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="inside">
                <group string="SO and PO Last Orders" groups="partner_last_order_info.partner_last_order_info_group_user">
                    <group>
                        <field name="last_sale_order_id" widget="many2one" options="{'no_create': True}" />
                        <field name="last_sale_order_date" readonly="1"/>
                    </group>
                    <group>
                        <field name="last_purchase_order_id" widget="many2one" options="{'no_create': True}" />
                        <field name="last_purchase_order_date" readonly="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
