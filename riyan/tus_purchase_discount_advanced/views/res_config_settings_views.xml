<?xml version="1.0" encoding="utf-8"?>
<odoo>
    	<record id="res_config_settings_view_form_purchase_discount" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.purchase.discount</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="25"/>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name="arch" type="xml">
            <xpath expr="//block[@name='purchase_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="group_purchase_discount"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_purchase_discount"/>
                        <div class="text-muted">
                            Allow discounts on purchase order lines and enable discount features
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
