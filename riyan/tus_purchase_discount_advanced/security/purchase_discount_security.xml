<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="res.groups.privilege" id="res_groups_privilege_purchase_discount">
        <field name="name">Purchase Discount</field>
        <field name="sequence">8</field>
        <field name="category_id" ref="base.module_category_supply_chain"/>
    </record>

    <record id="group_purchase_discount" model="res.groups">
        <field name="name">Purchase Discount</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="privilege_id" ref="res_groups_privilege_purchase_discount"/>
    </record>

    <record id="purchase_discount_rule" model="ir.rule">
        <field name="name">Purchase Discount Multi-Company</field>
        <field name="model_id" ref="model_purchase_order"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
