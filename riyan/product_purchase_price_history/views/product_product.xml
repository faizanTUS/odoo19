<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_product_history_tree_view_variants" model="ir.ui.view">
        <field name="name">purchase.order.product.history.list.view.variants</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="purchase_order_product_history" string="Purchase Product History" groups="product_purchase_price_history.product_purchase_history_group_user">
                    <field name="variant_purchase_ids" widget="one2many" context="{'show_attribute': False}">
                        <list>
                            <field name="partner_id" string="Vendor" />
                            <field name="user_id" string="Buyer" />
                            <field name="order_id" string="Purchase Order" />
                            <field name="date_order" string="Order Date" />
                            <field name="product_id" string="Product" />
                            <field name="product_qty" string="Quantity" />
                            <field name="price_unit" string="Unit Price" />
                            <field name="price_subtotal" string="Subtotal" />
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
