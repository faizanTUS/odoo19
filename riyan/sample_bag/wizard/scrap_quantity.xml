<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="scrap_quantity_form_view" model="ir.ui.view">
        <field name="name">scrap.quantity.form.view</field>
        <field name="model">scrap.quantity</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="sample_bag_id" readonly="1" />
                        </group>
                        <group>
                            <field name="xls_file" invisible="add_file == False" />
                            <!--                                attrs="{'invisible': [('add_file', '=', False)]}"-->
                            <field name="add_file" />
                            <field name="filename" invisible="1" />
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <a
                            href="/sample_bag/static/demo_data/excel_format.xlsx"
                            target="_blank"
                        >
                            <strong
                            >Click Here To Download Sample Scrap Qty Excel file</strong>
                        </a>
                    </div>
                    <notebook>
                        <page string="Sample Bag Products" name="sample_bag_products">
                            <field name="scrap_quantity_line_ids">
                                <list editable="bottom" create="false">
<!--                                    <field name="is_core"/>-->
                                    <field name="internal_reference" />
                                    <field
                                        name="product_id"
                                        force_save="1"
                                        options="{'no_create': True, 'no_create_edit':True}"
                                        readonly="1"
                                    />
                                    <field name="available_sample_qty" readonly="1" />
                                    <field name="sample_qty" />
                                    <field name="sample_bag_line_id" invisible="1" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button
                        name="scrap_qty_from_bag"
                        string="Scrap Qty From Bag"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="scrap_quantity_action" model="ir.actions.act_window">
        <field name="name">Scrap Quantity From Bag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">scrap.quantity</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
