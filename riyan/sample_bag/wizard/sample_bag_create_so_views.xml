<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sample_bag_create_so_formm_view" model="ir.ui.view">
        <field name="name">sample.bag.create.so.form.view</field>
        <field name="model">sample.bag.create.so</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field
                            name="partner_id"
                            required="1"
                            options="{'no_quick_create':True,'no_create_edit':True}"
                        />
                        <field name="is_normal_order" />
                        <field name="sample_bag_id" readonly="1" invisible="1" />
                    </group>
                    <group>
                        <field name="xls_file" invisible="add_file == False" />
                        <!--                            attrs="{'invisible': [('add_file', '=', False)]}"-->
                        <field name="add_file" />
                        <field name="filename" invisible="1" />
                    </group>
                    <div class="alert alert-info" role="alert">
                        <a
                            href="/sample_bag/static/demo_data/excel_format.xlsx"
                            target="_blank"
                        >
                            <strong
                            >Click Here To Download Create SO Qty Excel file</strong>
                        </a>
                    </div>
                    <notebook>
                        <page string="Sample Bag Products" name="sample_bag_products">
                            <field name="sample_bag_create_so_line_ids">
                                <list editable="bottom">
<!--                                    <field name="is_core"/>-->
                                    <field name="internal_reference" />
                                    <field
                                        name="product_id"
                                        create="false"
                                        edit="false"
                                        force_save="1"
                                    />
                                    <field name="lst_price" />
                                    <field name="sample_qty" />
                                    <field
                                        name="qty_at_location"
                                        string="Warehouse Qty"
                                        readonly="1"
                                        force_save="1"
                                    />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button
                        name="create_sample_bag_so"
                        string="Make SO"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

<!-- ================= second form view ================   -->
    <record id="sample_bag_refill_form_view" model="ir.ui.view">
        <field name="name">sample.bag.refill.form.view</field>
        <field name="model">sample.bag.create.so</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id" invisible="1" />
<!--                        <field name="is_normal_order"/>-->
                        <field name="sample_bag_id" readonly="1" invisible="1" />
                    </group>
                    <notebook>
                        <page string="Sample Bag Products" name="sample_bag_products">
                            <field name="sample_bag_create_so_line_ids">
                                <list editable="bottom">
<!--                                    <field name="is_core"/>-->
                                    <field name="internal_reference" />
                                    <field
                                        name="product_id"
                                        create="false"
                                        edit="false"
                                        force_save="1"
                                    />
                                    <field name="lst_price" />
                                    <field name="sample_qty" />
                                    <field
                                        name="qty_at_location"
                                        string="Warehouse Qty"
                                        readonly="1"
                                        force_save="1"
                                    />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button
                        name="create_sample_bag_so"
                        string="Make SO"
                        type="object"
                        class="btn-primary"
                        invisible="1"
                    />
                    <button string="cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
<!-- ================= second form view End ================   -->

    <record id="sample_bag_create_so_action" model="ir.actions.act_window">
        <field name="name">Create Sale Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sample.bag.create.so</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
