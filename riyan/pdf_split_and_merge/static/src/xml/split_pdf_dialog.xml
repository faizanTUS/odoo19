<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pdf_split_and_merge.SplitPdfDialog" owl="1">
        <Dialog size="'xl'" header="false" footer="false">
            <div class="d-flex justify-content-between align-items-center px-3 py-2 border-bottom">
                <h4 class="m-0">Split PDF Pages</h4>
                <div class="d-flex align-items-center gap-3">
                    <button type="button" class="btn btn-secondary px-3 py-2 fs-7 d-flex align-items-center"
                            t-on-click="splitSelectedPages">
                        <i class="fa fa-scissors me-2"/>
                        Split
                    </button>
                    <a href="#" t-on-click="() => this.closeDialog()">
                        <i class="fa fa-close" style="font-size: 20px; color: #000000;"/>
                    </a>
                </div>
            </div>

            <div class="p-3">
                <div t-if="state.isLoading" class="text-center py-5">
                    <i class="fa fa-spinner fa-spin fa-2x"/>
                    <p class="mt-2">Loading PDF pages...</p>
                </div>

                <div t-if="state.error" class="alert alert-danger">
                    <i class="fa fa-exclamation-triangle me-2"/>
                    <t t-esc="state.error"/>
                </div>

                <div t-if="!state.isLoading and !state.error" class="container-fluid">
                    <div class="row gy-3">
                        <t t-foreach="state.pages" t-as="page" t-key="page.number">
                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12" width="160" height="230">
                                <div t-att-class="'card h-100 ' + (state.selected.has(page.number) ? 'card-selected' : '')"
                                     t-on-click="() => toggleSelection(page.number)"
                                     style="cursor: pointer; height: 230px;">
                                    <div class="card-header py-2 d-flex justify-content-between align-items-center">
                                        <span class="fw-bold">Page <t t-esc="page.number"/></span>
                                        <input type="checkbox" class="pdf-checkbox"
                                               t-att-checked="state.selected.has(page.number) ? 'checked' : undefined"
                                               t-on-click.stop="(ev) => onCheckboxClick(ev, page.number)"/>
                                    </div>
                                    <div class="card-body p-0">
                                        <div class="pdf-image-container">
                                            <img t-att-src="page.preview_url"
                                                 alt="Page Preview"
                                                 class="pdf-image shadow-sm"
                                                 onerror="this.src='/web/static/src/img/placeholder.png'"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </Dialog>
    </t>
</templates>
