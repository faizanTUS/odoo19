<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_pdf_split_document_list" model="ir.ui.view">
        <field name="name">pdf.split.document.list</field>
        <field name="model">pdf.split.document</field>
        <field name="arch" type="xml">
            <list default_order="id desc">
                <field name="name"/>
                <field name="type"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_pdf_split_document_form" model="ir.ui.view">
        <field name="name">pdf.split.document.form</field>
        <field name="model">pdf.split.document</field>
        <field name="arch" type="xml">
            <form string="Split &amp; Merge PDF">
                <header>
                    <button name="action_split_pdf" type="object" string="Split PDF" class="oe_highlight"
                            invisible="state == 'split' or type == 'merge'"/>
                    <button name="action_merge_pdf" type="object" string="Merge PDF" class="oe_highlight"
                            invisible="state == 'merged' or type == 'split'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,split,merged" />
                </header>
                <sheet>
                    <group>
                        <field name="name" invisible="1"/>
                        <field name="type" readonly="state in ['split', 'merged']"/>
                        <field name="pdf_file" filename="name" readonly="state in ['split', 'merged']"/>
                    </group>
                    <notebook invisible="state == 'draft'">
                        <page name="split_pdf" string="All Files">
                            <field name="split_ids" readonly="1">
                                <list>
                                    <field name="name" column_invisible="1"/>
                                    <field name="split_file" string="Split/Merge Pdf" widget="pdf_binary" filename="name" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_pdf_split_document" model="ir.actions.act_window">
        <field name="name">Split &amp; Merge PDF</field>
        <field name="res_model">pdf.split.document</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_pdf_root" name="PDF Organizer" web_icon="pdf_split_and_merge,static/description/icon.png"/>
    <menuitem id="menu_pdf_split" name="Documents" parent="menu_pdf_root"/>
    <menuitem id="menu_pdf_split_action" name="Split &amp; Merge PDF" parent="menu_pdf_split" action="action_pdf_split_document"/>
</odoo>
