<odoo>
    <record id="view_picking_form_inherit_invoice" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.invoice</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="invoice_count" invisible="1"/>
                <field name="invoice_ids" invisible="1"/>
            </field>

            <div name="button_box" position="inside">
                <button type="object" name="action_view_invoices" class="oe_stat_button" icon='fa-pencil-square-o' string="Invoice">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value d-flex gap-1">
                            <field name="invoice_count" class="oe_inline"/>
                        </span>
                        <span class="o_stat_text">Invoice</span>
                    </div>
                </button>
            </div>

            <header>
                <button name="action_create_invoice" type="object" string="Create Invoice" class="btn-secondary"
                        invisible="invoice_count > 0 or state != 'done' "/>
            </header>

        </field>
    </record>
</odoo>
