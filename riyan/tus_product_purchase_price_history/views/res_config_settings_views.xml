<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_purchase_order_history_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.purchase.order.history.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='matrix_setting_container']" position="after">
                <h2>Purchase Price History</h2>
                <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="These accounts are set in any new PDC payment entry created.">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Product Item Limit</span>
                                <div class="text-muted">
                                    Number of items display in product Purchase price history
                                </div><br/>
                                <div class="text-muted">
                                    If you want to see all purchase history, so please make history limit is '0'.
                                </div>
                                <div class="text-muted">
                                    <field name="purchase_item_limit" />
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" title="These accounts are set in any new PDC payment entry created.">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Price History Data</span>
                                <div class="text-muted">
                                    Purchase product price history Data
                                </div>
                                <div class="text-muted">
                                    <field
                                    name="purchase_history_data"
                                    class="o_light_label"
                                    widget="radio"
                                    options="{'horizontal': true}"
                                />
                                </div>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>
