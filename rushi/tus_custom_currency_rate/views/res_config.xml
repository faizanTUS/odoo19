<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_tus_dynamic_mailing" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.dynamic.mailing</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40" />
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block name="main_currency_setting_container" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="allow_custom_currency_rate_setting">
                    <div class="o_setting_left_pane">
                        <field name="allow_custom_currency_rate" readonly="0" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="allow_custom_currency_rate" />
                        <div class="text-muted">
                            Allow new currency rate to manage custom rate on different models
                        </div>
                    </div>
                </div>
            </block>
        </field>
    </record>
</odoo>
