<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="purchase_order_form_currency_rate" model="ir.ui.view">
            <field name="name">purchase.order.form.currency.rate</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="allow_custom_currency_rate" invisible="1" />
                    <field name="is_company_currency" invisible="1" />
                    <field name="is_new_currency_rate_visible" invisible="1" />
                    <field name="new_currency_rate" invisible="allow_custom_currency_rate != True or is_new_currency_rate_visible != True"/>
                </xpath>
                <xpath expr="//group[hasclass('oe_subtotal_footer')]" position="inside">
                    <field name="company_currency_id" invisible="1" />
                    <field name="is_new_currency_rate_visible" invisible="1" />
                    <field
                        name="converted_currency_amount"
                        widget="monetary"
                        options="{'currency_field': 'company_currency_id'}"
                        invisible="allow_custom_currency_rate != True or is_new_currency_rate_visible != True"
                    />
                </xpath>
                <xpath expr="//field[@name='order_line']/list/field[@name='price_subtotal']" position="after">
                    <field name="company_currency_id" invisible="1" />
                    <field
                        name="converted_subtotal"
                        column_invisible="parent.allow_custom_currency_rate != True or parent.is_new_currency_rate_visible != True"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
