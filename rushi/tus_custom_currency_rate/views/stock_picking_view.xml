<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_stock_picking_form_currency_rate" model="ir.ui.view">
            <field name="name">stock.picking.move.form.currency.rate</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="allow_custom_currency_rate" invisible="1" />
                    <field
                        name="new_currency_rate"
                        invisible="allow_custom_currency_rate != True or picking_type_code == 'outgoing'"
                        readonly="state == 'done'"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
