<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_account_payment_inherit_tus" model="ir.ui.view">
            <field name="name">account.payment.form.inherit.tus</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="allow_custom_currency_rate" invisible="1" />
                    <field
                        name="custom_currency_rate"
                        invisible="state != 'draft' or allow_custom_currency_rate != True"
                    />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
