<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_move_form_currency_rate" model="ir.ui.view">
            <field name="name">account.move.form.currency.rate</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="allow_custom_currency_rate" invisible="1" />
                    <field name="is_new_currency_rate_visible" invisible="1" />
                    <field name="state" invisible="1" />
                    <field
                        name="new_currency_rate"
                        invisible="allow_custom_currency_rate != True or is_new_currency_rate_visible != True"
                        readonly= "origin_payment_id != False"
                    />
                </xpath>
                <xpath expr="//group[hasclass('oe_subtotal_footer')]" position="inside">
                    <field name="company_currency_id" invisible="1" />
                    <field name="is_new_currency_rate_visible" invisible="1" />
                    <field
                        name="converted_currency_amount"
                        widget="monetary"
                        options="{'currency_field': 'company_currency_id'}"
                        invisible="allow_custom_currency_rate != True or is_new_currency_rate_visible != True"
                    />
                </xpath>


                <xpath expr="//field[@name='invoice_cash_rounding_id']" position="after">
                    <field name="is_new_currency_rate_visible" invisible="1" />
                    <field name="currency_exchange_amount" readonly="1"
                        invisible="allow_custom_currency_rate != True or is_new_currency_rate_visible != True"/>
                </xpath>

                <xpath expr="//div[@name='currency_conversion_div']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_subtotal']" position="after">
                    <field name="company_currency_id" invisible="1" />
                    <field name="converted_subtotal" column_invisible = "parent.allow_custom_currency_rate != True or parent.is_new_currency_rate_visible != True"/>
                </xpath>
            </field>
        </record>

        <record id="view_out_invoice_tree_inherit_tus" model="ir.ui.view">
            <field name="name">account.move.tree.inherit.tus</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree" />
            <field name="arch" type="xml">
                <field name="amount_untaxed_in_currency_signed" position="before">
                    <field name="allow_custom_currency_rate" invisible="1" />
                    <field name="is_new_currency_rate_visible" invisible="1" />
                    <field
                        name="currency_exchange_amount"
                        optional="hide"
                        invisible="allow_custom_currency_rate != True or is_new_currency_rate_visible != True"
                    />
                </field>
            </field>
        </record>

        <record id="view_in_invoice_bill_tree_tus" model="ir.ui.view">
            <field name="name">account.in.invoice.tree.tus</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_tree" />
            <field name="arch" type="xml">
                <field name="amount_untaxed_in_currency_signed" position="before">
                    <field name="allow_custom_currency_rate" invisible="1" />
                    <field name="is_new_currency_rate_visible" invisible="1" />
                    <field
                        name="currency_exchange_amount"
                        optional="hide"
                        invisible="allow_custom_currency_rate != True or is_new_currency_rate_visible != True"
                    />
                </field>
            </field>
        </record>

    </data>
</odoo>
