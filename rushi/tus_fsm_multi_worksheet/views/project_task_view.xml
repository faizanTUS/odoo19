<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fsm_view_task_form2_inherit_tus" model="ir.ui.view">
        <field name="name">fsm.view.task.form2.inherit.tus</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="industry_fsm.view_task_form2_inherit"/>
        <field name="arch" type="xml">
<!--            <button name="action_fsm_worksheet" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </button>-->
<!--            <xpath expr="//button[hasclass('oe_worksheet_completed')]" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->
            <xpath expr="//notebook" position="inside">
                <page string="Worksheet">
                    <field name="project_task_worksheet_ids">
                        <list>
                            <field name="name"/>
                        </list>
                        <form>
                            <sheet>
                                <div class="oe_title">
                                    <h1>
                                        <field name="task_id" domain="[('is_fsm', '=', True)]" readonly="1"/>
                                    </h1>
                                </div>
                                <group class="o_fsm_worksheet_form">
                                    <field name="name"/>
                                    <field name="manufacturer" options="{'no_create':true,'no_open':true}"/>
                                    <field name="serial_number"/>
                                    <field name="intervention_type" widget="radio"/>
                                    <field name="description"/>
                                    <field name="checkbox"/>
                                    <field name="date"/>
                                    <field name="worker_signature" widget="signature"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
