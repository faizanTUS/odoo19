<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_general_general_configuration" model="ir.ui.view">
        <field name="name">General Settings New</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='integration']" position="after">
                <block title="SMTP Configuration" name="smtp_configuration">
                    <setting string="SMTP By Company">
                        <field name="smtp_by_company"/>
                    </setting>
                    <setting string="SMTP By User">
                        <field name="smtp_by_user"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>