<odoo>
    <data>
    <record id="product_pricelist_user_rule" model="ir.rule">
        <field name="name">Restrict Price List by User</field>
        <field name="model_id" ref="product.model_product_pricelist"/>
        <field name="domain_force">[('id', 'in', user.allowed_pricelist_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
    </data>
</odoo>