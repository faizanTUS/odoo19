<odoo>
    <!-- Product Template -->
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.sale.price.history</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='variants']" position="after">
                <page string="Sales Price History">
                    <field name="sale_price_history_ids" context="{'limit': 10}">
                        <list editable="bottom">
                            <field name="order_id"/>
                            <field name="price"/>
                            <field name="date"/>
                            <field name="state"/>
                        </list>
                    </field>
                </page>
                </xpath>

        </field>
    </record>
</odoo>
