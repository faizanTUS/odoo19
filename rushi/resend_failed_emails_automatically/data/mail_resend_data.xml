<odoo>
    <!-- Scheduled Action: Resend Failed Emails (Dynamic Interval) -->
    <record id="cron_resend_failed_emails" model="ir.cron">
        <field name="name">Resend Failed Emails</field>
        <field name="model_id" ref="resend_failed_emails_automatically.model_mail_auto_resend_cron"/>  <!-- Correct reference -->
        <field name="state">code</field>
        <field name="code">model.resend_failed_emails()</field> <!-- Correct method call -->
        <field name="interval_number">10</field>
        <field name="interval_type">minutes</field>
        <field name="active" eval="True"/>
    </record>

    <!-- Scheduled Action: Send Failed Email Report -->
    <record id="cron_send_failed_email_report" model="ir.cron">
        <field name="name">Daily Failed Emails Report</field>
        <field name="model_id" ref="resend_failed_emails_automatically.model_mail_auto_resend_cron"/>
        <field name="state">code</field>
        <field name="code">model.send_failed_email_report()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
