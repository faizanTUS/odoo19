<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="pos_config_settings_loyalty_point">
		<field name="name">res.config.setting.loyalty.point.form.view</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//block[@id='pos_inventory_section']" position="after">
				<block title="Loyalty Membership Point" id="loyalty_membership">
					<setting id="referral_reward_points">
						<field name="referral_reward_points"/>
					</setting>
				</block>
			</xpath>
        </field>
        </record>
    </data>
</odoo>