<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_loyalty_referral_list" model="ir.ui.view">
        <field name="name">Loyalty Referral</field>
        <field name="model">loyalty.referral</field>
        <field name="arch" type="xml">
            <list>
                <field name="referral_card_id"/>
                <field name="referred_card_id"/>
                <field name="points_earned"/>
            </list>
        </field>
    </record>
    <record id="view_loyalty_referral_form" model="ir.ui.view">
        <field name="name">Loyalty Referral Form</field>
        <field name="model">loyalty.referral</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="referral_card_id"/>
                            <field name="referred_card_id"/>
                            <field name="points_earned"/>
                            <field name="referred_partner_id"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
    <record id="action_loyalty_referral" model="ir.actions.act_window">
        <field name="name">Loyalty Referrals</field>
        <field name="res_model">loyalty.referral</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('referral_card_id', '=', active_id)]</field>
        <field name="context">{'default_referral_card_id': active_id}</field>
    </record>
</odoo>